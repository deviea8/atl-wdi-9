<h1>Add a New Pokemon</h1>

<form action="/pokemon" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" name="name">
  </div>
  <div>
    <label for="type">Type</label>
    <input type="text" name="type">
  </div>
  <div>
    <label for="hp">HPs</label>
    <input type="number" name="hp">
  </div>
  <div>
    <label for="attack">Attacks</label>
    <input type="number" name="attack">
  </div>
  <div>
    <label for="defense">Defenses</label>
    <input type="number" name="defense">
  </div>
  <div>
    <label for="spattack">Spattacks</label>
    <input type="number" name="spattack">
  </div>
  <div>
    <label for="spdefense">Spdefenses</label>
    <input type="number" name="spdefense">
  </div>
  <div>
    <label for="speed">Speed</label>
    <input type="number" name="speed">
  </div>
  <div>
    <label for="img">Image URL</label>
    <input type="text" name="img">
  </div>

<div>
  <input type="submit" value="Add New">
</div>

</form>

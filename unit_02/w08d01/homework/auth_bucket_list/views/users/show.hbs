<h1>{{user.username}}'s Summer Bucket List</h1>
<ul class="item-list">
  {{#each user.list}}
    <li><span class="bucket-list-item">{{this.name}}<br><span class="item-completed">Item Completed?: {{this.completed}}</span><br>
      <form class="edit-button">
        <a href="/users/{{../user.id}}/lists/{{this.id}}/edit"><button>Edit</button></a>
      </form>
      <form class="delete-button" action="/users/{{../user.id}}/lists/{{this.id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete"/>
      </form>
    </li>
  {{/each}}
</ul>

<h2>Add New Item</h2>
<form action="/users/{{user._id}}/lists" method="POST">
  <div>
    <label for="name">name</label>
    <input type="text" name="name">
  </div>

    <div>
    <label for="completed">completed?</label>
    <input type="text" name="completed">
  </div>

  <div>
    <input type="submit" value="Add New">
  </div>
</form>
